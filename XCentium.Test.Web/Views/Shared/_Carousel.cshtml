@model List<XCentium.Test.Utilities.ImageData>
@if (Model != null && Model.Count > 0)
{
    var slideClass = "active";
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            @foreach (var image in Model)
            {
                <div class="carousel-item @slideClass">
                    <img class="carousel-image" src="@image.Src" alt="@image.AltText">
                    @if (slideClass != string.Empty)
                    {
                        slideClass = string.Empty;
                    }
                </div>

            }
        </div>
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
@model  Dictionary<string, int>


@if (Model != null && Model.Count > 0)
{

    var rowCounter = 1;
    <script src="~/lib/highcharts/highcharts.js"></script>
    <script src="~/lib/highchartTable/jquery.highchartTable.js"></script>
    <div class="row">
        <div class="col-md-6">
            <h4>Table</h4>
            <table class="table highchart"
                   data-graph-container="#chart"
                   data-graph-type="column"
                   data-graph-legend-disabled="1">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Word</th>
                        <th>Count</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var word in Model.Keys)
                    {
                        <tr>
                            <th scope="row">@(rowCounter++)</th>
                            <td>@word</td>
                            <td>@Model[word]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h4>Graph</h4>
            <div id="chart" class="chart-container">
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('table.highchart').highchartTable();
        });
    </script>
}